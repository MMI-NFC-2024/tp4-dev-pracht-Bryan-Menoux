---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-8">
    <div class="max-w-4xl mx-auto">
      <header class="text-center mb-8">
        <h1 class="text-4xl font-bold text-gray-800 mb-4">
          Visualisation de données
        </h1>
        <p class="text-lg text-gray-600">
          Graphique généré avec Observable Plot et stylé avec Tailwind CSS
        </p>
      </header>

      <div class="bg-white rounded-lg shadow-lg p-6">
        <h2 class="text-2xl font-semibold text-gray-700 mb-6">
          Données des pingouins
        </h2>

        <!-- Filtres -->
        <div class="mb-6 p-4 bg-gray-50 rounded-lg border">
          <h3 class="text-lg font-medium text-gray-700 mb-4">
            Filtres de données
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label
                for="species"
                class="block text-sm font-medium text-gray-600 mb-2"
              >
                Espèce
              </label>
              <select
                name="species"
                id="species"
                class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200 text-gray-700 font-medium cursor-pointer hover:border-gray-400"
              >
                <option value="">Toutes les espèces</option>
                <option value="Adelie">Adelie</option>
                <option value="Chinstrap">Chinstrap</option>
                <option value="Gentoo">Gentoo</option>
              </select>
            </div>

            <div>
              <label
                for="island"
                class="block text-sm font-medium text-gray-600 mb-2"
              >
                Île
              </label>
              <select
                name="island"
                id="island"
                class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200 text-gray-700 font-medium cursor-pointer hover:border-gray-400"
              >
                <option value="">Toutes les îles</option>
                <option value="Biscoe">Biscoe</option>
                <option value="Dream">Dream</option>
                <option value="Torgersen">Torgersen</option>
              </select>
            </div>

            <div>
              <label
                for="sex"
                class="block text-sm font-medium text-gray-600 mb-2"
              >
                Sexe
              </label>
              <select
                name="sex"
                id="sex"
                class="w-full px-4 py-3 bg-white border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors duration-200 text-gray-700 font-medium cursor-pointer hover:border-gray-400"
              >
                <option value="">Tous les sexes</option>
                <option value="MALE">Mâle</option>
                <option value="FEMALE">Femelle</option>
              </select>
            </div>
          </div>
        </div>

        <div
          id="myplot"
          class="flex justify-center items-center min-h-[400px] bg-gray-50 rounded border-2 border-dashed border-gray-300"
        >
        </div>
      </div>
    </div>
  </main>
</Layout>
<script>
  import * as Plot from "@observablehq/plot";
  import penguins from "../assets/penguins.json";

  const selectSpecies = document.getElementById(
    "species"
  ) as HTMLSelectElement | null;
  const selectIsland = document.getElementById(
    "island"
  ) as HTMLSelectElement | null;
  const selectSex = document.getElementById("sex") as HTMLSelectElement | null;
  function renderPlot() {
    const species = selectSpecies?.value;
    const island = selectIsland?.value;
    const sex = selectSex?.value;

    const plotDiv = document.getElementById("myplot");

    if (plotDiv) plotDiv.innerHTML = "";
    const plot = Plot.plot({
      marks: [
        Plot.dot(penguins, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",
          filter: (d) =>
            (species ? d.species === species : true) &&
            (island ? d.island === island : true) &&
            (sex ? d.sex === sex : true),
        }),
      ],
    });
    if (plotDiv) plotDiv.appendChild(plot);
  }

  selectSpecies?.addEventListener("change", renderPlot);
  selectIsland?.addEventListener("change", renderPlot);
  selectSex?.addEventListener("change", renderPlot);
  renderPlot();
</script>
