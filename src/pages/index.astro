---
import Layout from "../layouts/Layout.astro";
import PlotFigure from "../components/PlotFigure.astro";
import * as Plot from "@observablehq/plot";
const delta = (d: any) => d.temp_max - d.temp_min;
---

<Layout>
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-8">
    <div class="max-w-4xl mx-auto">
      <header class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
          TP N°4 - Datavisualisation
        </h1>
        <p class="text-lg text-gray-600">
          Visualisation de données avec Observable Plot et Tailwind CSS
        </p>
      </header>

      <div class="space-y-8">
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-2xl font-semibold text-gray-700 mb-6 text-center">
            Visualisation des Pingouins
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <a
              href="/simple"
              class="text-center font-medium text-white bg-blue-600 hover:bg-blue-700 px-6 py-4 rounded-lg shadow-md transition-colors duration-200 hover:shadow-lg"
            >
              Simple
            </a>
            <a
              href="/simple-penguin"
              class="text-center font-medium text-white bg-blue-600 hover:bg-blue-700 px-6 py-4 rounded-lg shadow-md transition-colors duration-200 hover:shadow-lg"
            >
              Simple Penguin
            </a>
            <a
              href="/penguin-filtred"
              class="text-center font-medium text-white bg-blue-600 hover:bg-blue-700 px-6 py-4 rounded-lg shadow-md transition-colors duration-200 hover:shadow-lg"
            >
              Penguin Filtré
            </a>
            <a
              href="/penguin-multi-filtred"
              class="text-center font-medium text-white bg-blue-600 hover:bg-blue-700 px-6 py-4 rounded-lg shadow-md transition-colors duration-200 hover:shadow-lg"
            >
              Penguin Multi-Filtré
            </a>
          </div>
        </div>

        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-2xl font-semibold text-gray-700 mb-6 text-center">
            Visualisation des Olympiens
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <a
              href="/simple-olympians"
              class="text-center font-medium text-white bg-blue-600 hover:bg-blue-700 px-6 py-4 rounded-lg shadow-md transition-colors duration-200 hover:shadow-lg"
            >
              Simple Olympians
            </a>
            <a
              href="/olympians-filtred"
              class="text-center font-medium text-white bg-blue-600 hover:bg-blue-700 px-6 py-4 rounded-lg shadow-md transition-colors duration-200 hover:shadow-lg"
            >
              Olympians Filtré
            </a>
            <a
              href="/olympians-multi-filtred"
              class="text-center font-medium text-white bg-blue-600 hover:bg-blue-700 px-6 py-4 rounded-lg shadow-md transition-colors duration-200 hover:shadow-lg"
            >
              Olympians Multi-Filtré
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
